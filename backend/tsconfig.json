{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs" ,
    "outDir": "./dist" ,
    "rootDir": "./",
    "strict": true ,
    "esModuleInterop": true, 
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true ,
    "resolveJsonModule": true ,
    "sourceMap": true 
  },
  "include": ["**/*.ts", "src/knexfile.ts"], 
  "exclude": ["node_modules", "**/*.spec.ts"]
}
